{
    "meta": {
      "name": "AI Analytics Dashboard",
      "style": "dark-ai-saas-dashboard",
      "industry": ["ai", "analytics", "saas", "gaming", "monitoring"],
      "personality": ["intelligent", "calm", "modern", "insightful", "premium"],
      "targetUsers": ["founders", "product managers", "analysts", "developers"],
      "designGoals": [
        "Instant insight extraction",
        "Friendly AI-first experience",
        "High data density with soft visuals",
        "Professional but approachable tone"
      ]
    },
  
    "uxPrinciples": {
      "primaryFocus": "insight-discovery",
      "cognitiveLoad": "medium-low",
      "visualNoise": "very-low",
      "scanPattern": "sidebar -> KPI cards -> charts -> logs",
      "feedbackSpeed": "fast",
      "interactionPhilosophy": "explore-first-analyze-deeper",
      "emptyStates": "friendly-and-guiding"
    },
  
    "colorSystem": {
      "mode": "dark",
      "background": {
        "app": "#0E1118",
        "surfacePrimary": "#151A23",
        "surfaceSecondary": "#1B2230",
        "surfaceElevated": "#222A3B"
      },
      "text": {
        "primary": "#E9ECF1",
        "secondary": "#B2B8C7",
        "muted": "#7C849C",
        "disabled": "#4F566B"
      },
      "brand": {
        "primary": "#9333EA",
        "secondary": "#A855F7",
        "accent": "#C084FC"
      },
      "status": {
        "success": "#22C55E",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#9333EA"
      },
      "dataViz": {
        "normal": "#9333EA",
        "highlight": "#A855F7",
        "secondary": "#C084FC",
        "inactive": "#2D3446"
      },
      "borders": {
        "subtle": "rgba(255,255,255,0.04)",
        "strong": "rgba(255,255,255,0.10)"
      },
      "effects": {
        "cardGlow": "0 0 0 1px rgba(147,51,234,0.15)",
        "hoverGlow": "0 0 12px rgba(147,51,234,0.35)"
      }
    },
  
    "typography": {
      "fontFamily": "Inter",
      "scale": {
        "h1": { "size": 30, "weight": 700, "lineHeight": 1.25 },
        "h2": { "size": 22, "weight": 600, "lineHeight": 1.3 },
        "h3": { "size": 18, "weight": 600, "lineHeight": 1.4 },
        "body": { "size": 14, "weight": 400, "lineHeight": 1.6 },
        "caption": { "size": 12, "weight": 400, "lineHeight": 1.4 },
        "label": { "size": 11, "weight": 500, "letterSpacing": 0.5 }
      },
      "numeric": {
        "fontVariant": "tabular-nums",
        "emphasis": "bold"
      }
    },
  
    "spacingSystem": {
      "baseUnit": 8,
      "scale": [4, 8, 12, 16, 20, 24, 32, 48],
      "layoutPadding": 24,
      "cardPadding": 18,
      "sectionGap": 28
    },
  
    "layout": {
      "structure": "sidebar + topbar + main",
      "sidebar": {
        "width": 260,
        "behavior": "persistent",
        "visualWeight": "medium",
        "background": "surfacePrimary",
        "activeItemStyle": "rounded-pill"
      },
      "topbar": {
        "height": 64,
        "background": "surfacePrimary",
        "search": true,
        "actions": ["language", "settings", "profile"]
      },
      "mainArea": {
        "grid": "responsive-card-grid",
        "contentDensity": "balanced",
        "primaryVisual": "kpi-and-charts"
      }
    },
  
    "components": {
      "navigation": {
        "style": "icon + label",
        "activeState": "pill-background",
        "hover": "soft-glow",
        "iconColor": "brand.primary"
      },
  
      "cards": {
        "shape": "rounded",
        "radius": 16,
        "background": "surfaceSecondary",
        "shadow": "none",
        "border": "subtle",
        "glow": true
      },
  
      "charts": {
        "style": "smooth-gradient",
        "gridLines": "none",
        "axisLabels": "muted",
        "lineThickness": 3,
        "pointMarkers": false,
        "fill": "gradient",
        "animations": {
          "enabled": true,
          "durationMs": 600,
          "easing": "ease-out"
        }
      },
  
      "kpiCards": {
        "iconBackground": "brand.primary",
        "iconColor": "#FFFFFF",
        "trendIndicator": "percentage-text",
        "layout": "value-first"
      },
  
      "activityLog": {
        "avatar": true,
        "timestamp": "muted",
        "density": "compact"
      },
  
      "buttons": {
        "primary": {
          "background": "brand.primary",
          "text": "white",
          "radius": 14,
          "hoverEffect": "glow"
        },
        "secondary": {
          "background": "surfaceElevated",
          "border": "none",
          "text": "text.primary"
        }
      }
    },
  
    "iconography": {
      "style": "soft-outline",
      "strokeWidth": 1.5,
      "cornerStyle": "rounded",
      "semanticIcons": true
    },
  
    "motion": {
      "philosophy": "smooth-and-friendly",
      "hover": "glow + slight scale",
      "loading": "shimmer / pulse",
      "stateChange": "fade + slide"
    },
  
    "accessibility": {
      "contrastRatio": "AA",
      "colorIndependentSignals": true,
      "focusStates": "visible",
      "fontScaling": "supported"
    },
  
    "tone": {
      "visual": "modern and soft",
      "emotional": "confidence with friendliness",
      "avoid": ["harsh", "industrial", "overly-serious"]
    }
  }
  